{
  "openapi": "3.0.3",
  "info": {
    "title": "JollofAI Backend API",
    "version": "1.0.0",
    "description": "Comprehensive API documentation for JollofAI â€” the AI-powered smart cooking assistant with recipes, nutrition, cook-alongs, and lifestyle integrations."
  },
  "servers": [
    { "url": "http://localhost:5000/api", "description": "Local Development Server" },
    { "url": "https://jollofai.onrender.com/api", "description": "Production Server" }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  },
  "security": [{ "BearerAuth": [] }],
  "tags": [
    { "name": "Auth", "description": "Authentication and account management" },
    { "name": "Users", "description": "User profiles, preferences, and admin management" },
    { "name": "Recipes", "description": "Recipe CRUD, discovery, and AI recommendations" },
    { "name": "Vendors", "description": "Vendor listings, ratings, and discovery" },
    { "name": "Community", "description": "User shared recipes, likes, and comments" },
    { "name": "Cook-Alongs", "description": "Live cook-along sessions and timers" },
    { "name": "Meal Plans", "description": "AI meal planning and dietary tracking" },
    { "name": "Nutrition", "description": "Nutrition data, insights, and dietary filters" },
    { "name": "Progress", "description": "User meal tracking and history" },
    { "name": "Chat", "description": "Chat and voice-based cooking assistant" },
    { "name": "Pantry", "description": "Pantry management and AI item recognition" }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user and return JWT token",
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/auth/google": {
      "post": {
        "tags": ["Auth"],
        "summary": "Authenticate user via Google OAuth",
        "responses": { "200": { "description": "Google login success" } }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Send password reset email",
        "responses": { "200": { "description": "Reset email sent" } }
      }
    },
    "/auth/reset-password/{token}": {
      "put": {
        "tags": ["Auth"],
        "summary": "Reset password using token",
        "parameters": [
          { "name": "token", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Password reset successful" } }
      }
    },

    "/users/profile": {
      "get": {
        "tags": ["Users"],
        "summary": "Get current user profile with preferences",
        "responses": { "200": { "description": "Profile fetched successfully" } }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update user profile and preferences",
        "responses": { "200": { "description": "Profile updated successfully" } }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Admin: Get all users",
        "responses": { "200": { "description": "List of all users" } }
      }
    },

    "/recipes": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Get all recipes",
        "responses": { "200": { "description": "Recipes retrieved" } }
      },
      "post": {
        "tags": ["Recipes"],
        "summary": "Create a new recipe (admin only)",
        "responses": { "201": { "description": "Recipe created" } }
      }
    },
    "/recipes/for-you": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Get AI-personalized recipes for user",
        "parameters": [{ "name": "userId", "in": "query", "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Recommended recipes fetched" } }
      }
    },

    "/vendors": {
      "get": {
        "tags": ["Vendors"],
        "summary": "List all vendors",
        "responses": { "200": { "description": "Vendors fetched" } }
      },
      "post": {
        "tags": ["Vendors"],
        "summary": "Add a new vendor (Admin only)",
        "responses": { "201": { "description": "Vendor created" } }
      }
    },

    "/community": {
      "get": {
        "tags": ["Community"],
        "summary": "Get all shared recipes",
        "responses": { "200": { "description": "Community feed" } }
      },
      "post": {
        "tags": ["Community"],
        "summary": "Share a new recipe to the community",
        "responses": { "201": { "description": "Recipe shared" } }
      }
    },
    "/community/{id}/like": {
      "post": {
        "tags": ["Community"],
        "summary": "Like or unlike a community recipe",
        "parameters": [{ "name": "id", "in": "path", "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Like toggled" } }
      }
    },

    "/cook-alongs": {
      "get": {
        "tags": ["Cook-Alongs"],
        "summary": "Get all cook-along sessions",
        "responses": { "200": { "description": "Sessions fetched" } }
      },
      "post": {
        "tags": ["Cook-Alongs"],
        "summary": "Create a new cook-along session",
        "responses": { "201": { "description": "Session created" } }
      }
    },
    "/cook-alongs/{id}/join": {
      "post": {
        "tags": ["Cook-Alongs"],
        "summary": "Join a cook-along session via WebSocket",
        "parameters": [{ "name": "id", "in": "path", "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Joined successfully" } }
      }
    },

    "/meal-plans/generate": {
      "post": {
        "tags": ["Meal Plans"],
        "summary": "Generate AI-based meal plan for user",
        "responses": { "200": { "description": "Meal plan generated" } }
      }
    },

    "/nutrition/insights": {
      "get": {
        "tags": ["Nutrition"],
        "summary": "Get nutrition insights for user",
        "responses": { "200": { "description": "Nutrition data fetched" } }
      }
    },

    "/progress": {
      "get": {
        "tags": ["Progress"],
        "summary": "Get user's progress or history",
        "responses": { "200": { "description": "Progress fetched" } }
      }
    },

    "/chat": {
      "get": {
        "tags": ["Chat"],
        "summary": "Get chat history",
        "responses": { "200": { "description": "Chats retrieved" } }
      },
      "post": {
        "tags": ["Chat"],
        "summary": "Send message to AI or user",
        "responses": { "200": { "description": "Message sent" } }
      }
    },

    "/pantry": {
      "get": {
        "tags": ["Pantry"],
        "summary": "Get user's pantry items",
        "responses": { "200": { "description": "Pantry items retrieved" } }
      },
      "post": {
        "tags": ["Pantry"],
        "summary": "Add or detect pantry item via AI",
        "responses": { "201": { "description": "Pantry item added" } }
      }
    }
  }
}
