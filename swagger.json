{
  "openapi": "3.0.3",
  "info": {
    "title": "JollofAI Backend API",
    "version": "1.0.2",
    "description": "Unified API documentation for JollofAI â€” Smart Recipes, Pantry, Vendors, Meal Plans, AI Chat, and Collaborative Cooking."
  },
  "servers": [
    {
      "url": "https://your-render-app.onrender.com/api",
      "description": "Production"
    },
    {
      "url": "http://localhost:5000/api",
      "description": "Local Development"
    }
  ],
  "tags": [
    { "name": "Auth", "description": "User authentication and Google login" },
    { "name": "Recipes", "description": "Recipe management and AI matching" },
    { "name": "Nutrition", "description": "Nutrition analysis and recommendations" },
    { "name": "Progress", "description": "Cooking progress tracking" },
    { "name": "Users", "description": "User profiles and preferences" },
    { "name": "Vendors", "description": "Google Places-based vendor listings" },
    { "name": "Ratings", "description": "User ratings and reviews" },
    { "name": "Chat", "description": "AI cooking assistant and suggestions" },
    { "name": "CookAlong", "description": "Live collaborative cooking sessions" },
    { "name": "MealPlan", "description": "Weekly AI-powered meal planning" },
    { "name": "Pantry", "description": "Track your ingredients and available items" }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": { "201": { "description": "User registered successfully" } }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User logged in successfully" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/auth/google": {
      "get": {
        "tags": ["Auth"],
        "summary": "Authenticate user via Google OAuth",
        "responses": { "302": { "description": "Redirects to Google login" } }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout user",
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "User logged out" } }
      }
    },

    "/recipes": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Get all recipes",
        "responses": { "200": { "description": "List of recipes" } }
      },
      "post": {
        "tags": ["Recipes"],
        "summary": "Create a recipe (Admin only)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "ingredients": { "type": "array", "items": { "type": "string" } },
                  "instructions": { "type": "array", "items": { "type": "string" } },
                  "cuisine": { "type": "string" },
                  "image": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Recipe created" } }
      }
    },

    "/nutrition/analyze": {
      "post": {
        "tags": ["Nutrition"],
        "summary": "Analyze recipe nutrition",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ingredients": { "type": "array", "items": { "type": "string" } },
                  "servingSize": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Nutrition breakdown" } }
      }
    },

    "/progress/start": {
      "post": {
        "tags": ["Progress"],
        "summary": "Start or resume cooking progress",
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "Cooking started" } }
      }
    },

    "/users/profile": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user profile",
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "Profile retrieved" } }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update profile and preferences",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "avatar": { "type": "string" },
                  "preferences": {
                    "type": "object",
                    "properties": {
                      "dietary": { "type": "array", "items": { "type": "string" } },
                      "cuisine": { "type": "array", "items": { "type": "string" } }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Profile updated" } }
      }
    },

    "/vendors/sync": {
      "post": {
        "tags": ["Vendors"],
        "summary": "Sync vendors from Google API",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lat": { "type": "number" },
                  "lng": { "type": "number" }
                },
                "required": ["lat", "lng"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Vendors synced" } }
      }
    },

    "/ratings": {
      "post": {
        "tags": ["Ratings"],
        "summary": "Rate an item (recipe or vendor)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "targetId": { "type": "string" },
                  "targetType": { "type": "string", "enum": ["recipe", "vendor"] },
                  "rating": { "type": "number" },
                  "review": { "type": "string" }
                },
                "required": ["targetId", "targetType", "rating"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Rating created or updated" } }
      }
    },

    "/chat/message": {
      "post": {
        "tags": ["Chat"],
        "summary": "Send message to AI chat",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
            }
          }
        },
        "responses": { "200": { "description": "AI response" } }
      }
    },

    "/cookalong/create": {
      "post": {
        "tags": ["CookAlong"],
        "summary": "Create cook-along session",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "recipeId": { "type": "string" }, "hostId": { "type": "string" } }
              }
            }
          }
        },
        "responses": { "201": { "description": "Session created" } }
      }
    },

    "/mealplan/generate": {
      "post": {
        "tags": ["MealPlan"],
        "summary": "Generate AI meal plan for user",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dietaryPreferences": { "type": "array", "items": { "type": "string" } },
                  "calorieTarget": { "type": "number" },
                  "durationDays": { "type": "integer", "default": 7 }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Meal plan generated" } }
      }
    },

    "/mealplan/{id}": {
      "get": {
        "tags": ["MealPlan"],
        "summary": "Get a saved meal plan by ID",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "schema": { "type": "string" }, "required": true }
        ],
        "responses": { "200": { "description": "Meal plan details" } }
      }
    },

    "/pantry": {
      "get": {
        "tags": ["Pantry"],
        "summary": "Get all pantry items",
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "User pantry list" } }
      },
      "post": {
        "tags": ["Pantry"],
        "summary": "Add ingredient to pantry",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "item": { "type": "string" }, "quantity": { "type": "string" } },
                "required": ["item"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Item added" } }
      }
    },

    "/pantry/{id}": {
      "delete": {
        "tags": ["Pantry"],
        "summary": "Remove item from pantry",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "schema": { "type": "string" }, "required": true }
        ],
        "responses": { "200": { "description": "Item removed" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
