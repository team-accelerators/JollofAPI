{
  "paths": {
    "/ratings": {
      "post": {
        "tags": ["Ratings"],
        "summary": "Rate or review an item (recipe or vendor)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["targetId", "targetType", "rating"],
                "properties": {
                  "targetId": {
                    "type": "string",
                    "example": "6710a1234b56c7890d12ef34"
                  },
                  "targetType": {
                    "type": "string",
                    "enum": ["recipe", "vendor"],
                    "example": "recipe"
                  },
                  "rating": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 5,
                    "example": 4
                  },
                  "review": {
                    "type": "string",
                    "example": "Really tasty and well-balanced meal!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Rating created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Rating updated" },
                    "rating": {
                      "type": "object",
                      "properties": {
                        "_id": { "type": "string" },
                        "targetId": { "type": "string" },
                        "targetType": { "type": "string" },
                        "rating": { "type": "number" },
                        "review": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/ratings/{targetType}/{targetId}": {
      "get": {
        "tags": ["Ratings"],
        "summary": "Get average rating for a recipe or vendor",
        "parameters": [
          {
            "name": "targetType",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "enum": ["recipe", "vendor"] },
            "description": "Type of target (recipe or vendor)"
          },
          {
            "name": "targetId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID of the recipe or vendor"
          }
        ],
        "responses": {
          "200": {
            "description": "Average rating data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "average": { "type": "number", "example": 4.3 },
                    "count": { "type": "integer", "example": 23 }
                  }
                }
              }
            }
          },
          "404": { "description": "Item not found" },
          "500": { "description": "Error fetching ratings" }
        }
      }
    }
  }
}
